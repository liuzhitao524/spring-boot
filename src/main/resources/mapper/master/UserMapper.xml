<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hqins.demo.dao.master.UserDao">
    <resultMap id="userResultMap" type="com.hqins.demo.domain.master.User">
        <result column="id" property="id" />
        <result column="user_name" property="username" />
        <result column="description" property="description" />
    </resultMap>



    <sql id="Base_Column_List">
        id, user_name, description
    </sql>

    <select id="findUserById" resultMap="userResultMap" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List" />
        from user
        where id = #{id}
    </select>

</mapper>
